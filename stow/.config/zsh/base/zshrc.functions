kjob_create(){
    CRONJOB=$(kubectl get cronjobs.batch | awk '(NR>1) {print $1}' | fzf)
    kubectl create job --from=cronjob/${CRONJOB} ${CRONJOB}-manual
}

kjob_delete(){
    JOB=$(kubectl get jobs.batch | awk '(NR>1) {print $1}' | fzf)
    kubectl delete job ${JOB}
}

